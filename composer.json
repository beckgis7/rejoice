{
    "name": "rejoice/rejoice",
    "description": "Rejoice building USSD applications",
    "type": "project",
    "require": {
        "rejoice/framework": "^0.0.7",
        "symfony/console": "^5.1"
    },
    "require-dev": {
        "rejoice/simulator": "^0.2.2",
        "phpunit/phpunit": "^9.2.5"
    },
    "license": "MIT",
    "minimum-stability": "dev",
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}