{
    "name": "rejoice/rejoice",
    "description": "Rejoice building USSD applications",
    "type": "project",
    "require": {
        "rejoice/framework": "dev-master",
        "symfony/console": "5.1",
        "symfony/http-foundation": "^5.2@dev",
        "symfony/routing": "^5.2@dev",
        "symfony/http-kernel": "^5.2@dev",
        "symfony/event-dispatcher": "^5.2@dev",
        "symfony/dependency-injection": "^5.2@dev"
    },
    "require-dev": {
        "rejoice/simulator": "dev-master",
        "phpunit/phpunit": "9.2.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Prince Dorcis",
            "email": "princedorcis@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
